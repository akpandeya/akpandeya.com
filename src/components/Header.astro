---
import DarkModeToggle from './DarkModeToggle.astro';

const currentPath = Astro.url.pathname;
---

<header class="border-b border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 transition-colors duration-300">
  <nav class="max-w-content mx-auto px-4 py-6 flex justify-between items-center">
    <a
      href="/"
      class="text-xl font-semibold text-text dark:text-gray-100 no-underline hover:text-accent dark:hover:text-accent-dark transition-colors duration-300"
    >
      Avanindra Kumar Pandeya
    </a>
    <div class="flex gap-6 items-center">
      <a
        href="/"
        class={`no-underline hover:text-accent dark:hover:text-accent-dark transition-colors duration-300 ${currentPath === '/' ? 'text-accent dark:text-accent-dark font-medium' : 'text-text dark:text-gray-300'}`}
      >
        Home
      </a>
      <a
        href="/blog"
        class={`no-underline hover:text-accent dark:hover:text-accent-dark transition-colors duration-300 ${currentPath.startsWith('/blog') ? 'text-accent dark:text-accent-dark font-medium' : 'text-text dark:text-gray-300'}`}
      >
        Blog
      </a>
      <DarkModeToggle />
    </div>
  </nav>
</header>
