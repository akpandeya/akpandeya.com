---
interface Props {
  tech: string;
  category?: "backend" | "frontend" | "devops" | "data" | "default";
}

const { tech, category = "default" } = Astro.props;

const colors = {
  backend: "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300",
  frontend:
    "bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-300",
  devops:
    "bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-300",
  data: "bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300",
  default: "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
};

const className = colors[category as keyof typeof colors] || colors.default;
---

<span
  class={`px-2.5 py-1 rounded-md text-xs font-medium ${className} transition-colors whitespace-nowrap`}
>
  {tech}
</span>
