---
interface Props {
  tech: string;
  category: 'backend' | 'data' | 'devops' | 'frontend';
}

const { tech, category } = Astro.props;

const categoryStyles = {
  backend: 'bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-400 hover:to-blue-500',
  data: 'bg-gradient-to-r from-purple-500 to-purple-600 hover:from-purple-400 hover:to-purple-500',
  devops: 'bg-gradient-to-r from-emerald-500 to-emerald-600 hover:from-emerald-400 hover:to-emerald-500',
  frontend: 'bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-400 hover:to-orange-500',
};
---

<span
  class={`
    inline-block px-3 py-1.5 rounded-full text-sm font-medium text-white
    ${categoryStyles[category]}
    transition-all duration-200 hover:scale-105 hover:shadow-lg
    cursor-default
  `}
>
  {tech}
</span>
