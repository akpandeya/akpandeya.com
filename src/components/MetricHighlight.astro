---
interface Props {
  value: string;
  label: string;
  variant?: 'primary' | 'secondary';
}

const { value, label, variant = 'primary' } = Astro.props;

const variantStyles = {
  primary: 'from-accent to-accent-dark',
  secondary: 'from-purple-500 to-blue-500',
};
---

<div class="flex flex-col items-center p-4 rounded-xl bg-white dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 shadow-md hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
  <div class={`text-4xl font-bold bg-gradient-to-r ${variantStyles[variant]} bg-clip-text text-transparent`}>
    {value}
  </div>
  <div class="text-sm text-gray-600 dark:text-gray-400 mt-1 text-center">
    {label}
  </div>
</div>
