---
interface Props {
  title: string;
  description: string;
  link?: string;
  tags?: string[];
}

const { title, description, link, tags = [] } = Astro.props;
---

<div
  class="border border-gray-200 rounded-lg p-6 hover:border-accent transition-colors"
>
  <h3 class="text-xl font-semibold mb-2">
    {
      link ? (
        <a
          href={link}
          class="text-text hover:text-accent no-underline"
          target="_blank"
          rel="noopener noreferrer"
        >
          {title}
        </a>
      ) : (
        title
      )
    }
  </h3>
  <p class="text-gray-700 mb-4">{description}</p>
  {
    tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded">
            {tag}
          </span>
        ))}
      </div>
    )
  }
</div>
