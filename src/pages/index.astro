---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';

// Fetch latest blog posts
const allPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout
  title="Avanindra Kumar Pandeya - Senior Software Developer"
  description="Senior Software Developer with 8+ years of experience building scalable backend systems. Expert in Python, distributed systems, optimization algorithms, and cloud infrastructure."
>
  <div class="max-w-content mx-auto px-4 py-12">
    <!-- Hero Section -->
    <section class="mb-16 animate-fade-in">
      <h1 class="text-5xl font-bold mb-2 text-text dark:text-gray-100">Avanindra Kumar Pandeya</h1>
      <p class="text-xl text-gray-700 dark:text-gray-300 mb-2">
        Senior Software Developer
      </p>
      <p class="text-gray-600 dark:text-gray-400 mb-4">Berlin, Germany</p>
      <div class="flex gap-4">
        <a
          href="https://github.com/akpandeya"
          target="_blank"
          rel="noopener noreferrer"
          class="text-accent dark:text-accent-dark hover:text-accent-hover dark:hover:text-cyan-300 transition-all duration-300 hover:scale-110"
        >
          GitHub
        </a>
        <a
          href="https://linkedin.com/in/akpandeya"
          target="_blank"
          rel="noopener noreferrer"
          class="text-accent dark:text-accent-dark hover:text-accent-hover dark:hover:text-cyan-300 transition-all duration-300 hover:scale-110"
        >
          LinkedIn
        </a>
      </div>
    </section>

    <!-- About Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-semibold mb-4 text-text dark:text-gray-100">About</h2>
      <p class="text-gray-700 dark:text-gray-300">
        Senior Software Developer with 8+ years of experience building scalable
        backend systems and data-driven solutions. Expert in Python, distributed
        systems, optimization algorithms, and cloud infrastructure. Proven track
        record of delivering multi-million Euro cost savings through efficient
        system design and algorithmic optimization.
      </p>
    </section>

    <!-- Experience Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-semibold mb-6 text-text dark:text-gray-100">Experience</h2>

      <div class="mb-8">
        <div
          class="flex flex-col md:flex-row md:justify-between md:items-baseline mb-2"
        >
          <h3 class="text-xl font-semibold text-text dark:text-gray-100">HelloFresh</h3>
          <span class="text-gray-600 dark:text-gray-400 text-sm">July 2021 – Present</span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 mb-3">
          Senior Software Developer (SCM & Automation) | Berlin, Germany
        </p>
        <ul class="list-disc list-inside space-y-2 text-gray-700 dark:text-gray-300">
          <li>
            Supply Chain Optimization: Engineered a Network Planning System
            using Python and Pyomo/CP-SAT, reducing operational costs by over
            €10 Million/year.
          </li>
          <li>
            Data Pipelines: Orchestrated complex ETLs with Apache Airflow to
            transform order data into multi-format outputs for internal
            downstream systems.
          </li>
          <li>
            Real-time Streaming: Implemented order streaming using Kafka to
            ensure immediate synchronization with warehouse processes.
          </li>
          <li>
            Architecture: Designed and deployed asynchronous microservices on
            Kubernetes using Terraform for Infrastructure as Code.
          </li>
          <li>
            Hybrid Logic: Solved warehouse scheduling constraints by building a
            performance-optimized Kotlin & Python hybrid application.
          </li>
        </ul>
      </div>

      <div>
        <div
          class="flex flex-col md:flex-row md:justify-between md:items-baseline mb-2"
        >
          <h3 class="text-xl font-semibold text-text dark:text-gray-100">Max Planck Institute</h3>
          <span class="text-gray-600 dark:text-gray-400 text-sm">July 2015 – June 2021</span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 mb-3">
          Full Stack Developer & Researcher | Halle, Germany
        </p>
        <ul class="list-disc list-inside space-y-2 text-gray-700 dark:text-gray-300">
          <li>
            Internal Tooling: Built a custom Experiment Management System with
            a Django backend and React.js frontend to manage and visualize
            massive scientific datasets.
          </li>
          <li>
            Automation: Developed Python scripts for hardware interfacing and
            automated data analysis, replacing manual workflows.
          </li>
          <li>
            DevOps: Established Jenkins pipelines for automated testing (TDD)
            and rapid deployment of web services.
          </li>
        </ul>
      </div>
    </section>

    <!-- Tech Stack Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-semibold mb-6 text-text dark:text-gray-100">Tech Stack</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="transition-transform duration-300 hover:scale-105">
          <h3 class="font-semibold mb-2 text-text dark:text-gray-100">Backend</h3>
          <p class="text-gray-700 dark:text-gray-300">
            Python (Expert), Kotlin, FastAPI, Django & Django REST, SQLAlchemy
          </p>
        </div>
        <div class="transition-transform duration-300 hover:scale-105">
          <h3 class="font-semibold mb-2 text-text dark:text-gray-100">Data & Automation</h3>
          <p class="text-gray-700 dark:text-gray-300">
            Apache Airflow, Kafka, RabbitMQ, NumPy, SciPy, Pandas, Pyomo,
            OR-Tools
          </p>
        </div>
        <div class="transition-transform duration-300 hover:scale-105">
          <h3 class="font-semibold mb-2 text-text dark:text-gray-100">DevOps & Cloud</h3>
          <p class="text-gray-700 dark:text-gray-300">
            Kubernetes (K8s), Docker, Helm, Terraform (IaC), Jenkins, GitHub
            Actions, Azure, GCP, Linux (Debian)
          </p>
        </div>
        <div class="transition-transform duration-300 hover:scale-105">
          <h3 class="font-semibold mb-2 text-text dark:text-gray-100">Frontend</h3>
          <p class="text-gray-700 dark:text-gray-300">React.js, JavaScript, HTML5, CSS3</p>
        </div>
      </div>
    </section>

    <!-- Education Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-semibold mb-6 text-text dark:text-gray-100">Education</h2>
      <div class="space-y-4">
        <div class="transition-transform duration-300 hover:translate-x-1">
          <h3 class="font-semibold text-text dark:text-gray-100">Ph.D., Nano Science / Computational Physics</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Max Planck Institute / Martin Luther University, Halle
          </p>
          <p class="text-gray-700 dark:text-gray-300 text-sm">
            Focus: Simulation and Modeling of Quantum Materials
          </p>
        </div>
        <div class="transition-transform duration-300 hover:translate-x-1">
          <h3 class="font-semibold text-text dark:text-gray-100">M.Tech, Materials Science (CPI: 9.47/10)</h3>
          <p class="text-gray-600 dark:text-gray-400">Indian Institute of Technology (IIT) Kanpur</p>
        </div>
        <div class="transition-transform duration-300 hover:translate-x-1">
          <h3 class="font-semibold text-text dark:text-gray-100">B.Tech, Electronics & Communication</h3>
          <p class="text-gray-600 dark:text-gray-400">Mizoram University (Gold Medalist / Topper)</p>
        </div>
      </div>
    </section>

    <!-- Recent Writing Section -->
    {
      recentPosts.length > 0 && (
        <section class="mb-16">
          <div class="flex justify-between items-baseline mb-6">
            <h2 class="text-3xl font-semibold text-text dark:text-gray-100">Recent Writing</h2>
            <a
              href="/blog"
              class="text-accent dark:text-accent-dark hover:text-accent-hover dark:hover:text-cyan-300 text-sm transition-all duration-300 hover:translate-x-1"
            >
              View all posts →
            </a>
          </div>
          <div>
            {recentPosts.map((post) => (
              <BlogCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                slug={post.slug}
              />
            ))}
          </div>
        </section>
      )
    }

    <!-- Contact Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-semibold mb-4">Contact</h2>
      <p class="text-gray-700 dark:text-gray-300 mb-4">
        Connect with me on GitHub or LinkedIn to discuss software engineering, optimization, or potential collaborations.
      </p>
      <div class="flex gap-4">
        <a
          href="https://github.com/akpandeya"
          target="_blank"
          rel="noopener noreferrer"
          class="text-accent hover:text-accent-hover dark:text-accent-dark transition-all duration-300 hover:scale-105"
        >
          GitHub
        </a>
        <a
          href="https://linkedin.com/in/akpandeya"
          target="_blank"
          rel="noopener noreferrer"
          class="text-accent hover:text-accent-hover dark:text-accent-dark transition-all duration-300 hover:scale-105"
        >
          LinkedIn
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
