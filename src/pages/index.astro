      <h2 class="text-3xl font-semibold mb-6">Education</h2>
      <div class="space-y-4">
        <div>
          <h3 class="font-semibold">Ph.D., Nano Science / Computational Physics</h3>
          <p class="text-gray-600">
            Max Planck Institute / Martin Luther University, Halle
          </p>
          <p class="text-gray-700 text-sm">
            Focus: Simulation and Modeling of Quantum Materials
          </p>
        </div>
        <div>
          <h3 class="font-semibold">M.Tech, Materials Science (CPI: 9.47/10)</h3>
          <p class="text-gray-600">Indian Institute of Technology (IIT) Kanpur</p>
        </div>
        <div>
          <h3 class="font-semibold">B.Tech, Electronics & Communication</h3>
          <p class="text-gray-600">Mizoram University (Gold Medalist / Topper)</p>
        </div>
      </div>
    </section>

    <!-- Recent Writing Section -->
    {
      recentPosts.length > 0 && (
        <section class="mb-16">
          <div class="flex justify-between items-baseline mb-6">
            <h2 class="text-3xl font-semibold">Recent Writing</h2>
            <a
              href="/blog"
              class="text-accent hover:text-accent-hover text-sm"
            >
              View all posts →
            </a>
          </div>
          <div>
            {recentPosts.map((post) => (
              <BlogCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                slug={post.slug}
              />
            ))}
          </div>
        </section>
      )
    }

    <!-- Contact Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-semibold mb-4">Contact</h2>
      <p class="text-gray-700 mb-4">
        Want to chat? Reach me at{' '}
        <a
          href="mailto:akpandeya1@gmail.com"
          class="text-accent hover:text-accent-hover"
        >
          akpandeya1@gmail.com
        </a>
      </p>
      <a
        href="https://github.com/akpandeya"
        target="_blank"
        rel="noopener noreferrer"
        class="text-accent hover:text-accent-hover"
      >
        GitHub Profile
      </a>
    </section>
